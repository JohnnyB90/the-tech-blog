<!-- This is the mainpage where the posts will displayed -->
<body>
    <h1>Welcome to Tech Blog!</h1>
    {{#if loggedIn}}
    <a href="/dashboard">Dashboard</a> | <a href="/logout">Logout</a>
    {{else}}
    <a href="/login">Login</a> | <a href="/signup">Signup</a>
    {{/if}}
    
    <h2>All Blog Posts</h2>
    {{#each blogPosts}}
    <div>
      <h3><a href="/blogpost/{{this.id}}">{{this.title}}</a></h3>
      <p>{{this.content}}</p>
      <p>Written by {{this.User.username}} on {{this.createdAt}}</p>
    </div>
    {{/each}}
  </body>