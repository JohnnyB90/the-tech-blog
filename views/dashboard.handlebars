<div class="dashboard d-flex justify-content-center text-center">
  <h2>Your Blog Posts</h2>
  <div class="row justify-content-center mt-5">
    {{#each blogPosts as |post|}}
      <div class="col-lg-12">
        <div class="card-body">
          {{> blogpost.card post=post isDashboard=true}}
        </div>
      </div>
    {{/each}}
  </div>
  <a href="/dashboard/new" class="custom-text-color mt-5">+New Post</a>
</div>
