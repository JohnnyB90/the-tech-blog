<section class="center-container">
  <h2>Login</h2>
  <form class="form login-form" id="login-form">
    <div class="form-group">
      <label for="email-login">Email:</label>
      <input class="form-input" type="text" id="email-login" placeholder="Enter
        your email"/>
    </div>
    <div class="form-group rounded-2">
      <label for="password-login" autocomplete="current-password">Password:</label>
      <input class="form-input" type="password" id="password-login"
        placeholder="Enter your password"/>
    </div>
    <div class="form-group center-button">
      <button class="btn btn-primary" id="login-btn" type="submit">Login</button>
    </div>
  </form>
</section>
<script src="/js/login.js"></script>